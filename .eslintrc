{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "rules": {
    "comma-dangle": [2, {
      "arrays": "always-multiline",
      "objects": "always-multiline"
    }],
    "curly": [2, "multi-line"],
    "new-cap": 0,
    "no-mixed-requires": 0,
    "no-trailing-spaces": 2,
    "no-underscore-dangle": 0,
    "no-use-before-define": [2, "nofunc"],
    "no-var": 2,
    "object-shorthand": 2,
    "prefer-arrow-callback": [2, {
      "allowNamedFunctions": true
    }],
    "prefer-const": 2,
    "prefer-spread": 2,
    "quotes": 0
  }
}
